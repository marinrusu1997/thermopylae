{
    "name": "@thermopylae/core.logger",
    "description": "Logger for core Thermopylae modules.",
    "keywords": [
        "core"
    ],
    "version": "0.0.1",
    "author": "Rusu Marin dimarusu2000@gmail.com",
    "main": "dist/index.js",
    "exports": "./dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "lint": "eslint \"lib/**/*.ts\" \"test/**/*.ts\" --fix",
        "build": "gulp build",
        "doc": "gulp doc",
        "readme": "gulp readme",
        "test": "gulp test",
        "report": "gulp report",
        "coverage": "gulp coverage",
        "coverage:show": "gulp coverageShow",
        "debug": "gulp debug",
        "clean": "gulp clean",
        "purge": "gulp purge",
        "update": "gulp stickToMajorSemver && npm update --dev --force -verbose",
        "bumpVersion": "timestamp=$(date \"+%s\") && npm version 0.0.$timestamp",
        "precommit": "npm run lint",
        "prepublishOnly": "npm run lint && npm run clean && npm run build && npm run bumpVersion && gulp stickToMajorSemver && gulp readme",
        "unpublish": "npm unpublish --force $npm_package_name"
    },
    "dependencies": {
        "@thermopylae/core.declarations": "0",
        "@thermopylae/lib.exception": "0",
        "chalk": "4",
        "winston": "3",
        "winston-daily-rotate-file": "4",
        "winston-graylog2": "2"
    },
    "devDependencies": {
        "@thermopylae/lib.unit-test": "0",
        "@thermopylae/lib.utils": "0",
        "@thermopylae/module-builder": "0",
        "moment": "2"
    },
    "peerDependencies": {
        "chai": "4",
        "logform": "2",
        "mocha": "8",
        "winston-transport": "4"
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "engines": {
        "node": ">= 16"
    },
    "license": "ISC",
    "type": "commonjs"
}