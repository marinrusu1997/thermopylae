{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#AUTH_SERVICE-CHANGE_ACCOUNT_STATUS",
  "type": "object",
  "title": "AuthService change account status method",
  "description": "Method used by the admins in order to change user account status.",
  "properties": {
    "status": {
      "enum": [
        "enabled",
        "disabled"
      ]
    },
    "accountId": {
      "$ref": "../core/core.json#/definitions/id"
    },
    "cause": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200
    }
  },
  "required": [
    "status",
    "accountId"
  ],
  "if": {
    "properties": {
      "status": {
        "enum": [
          "disabled"
        ]
      }
    }
  },
  "then": {
    "required": [
      "cause"
    ]
  }
}
