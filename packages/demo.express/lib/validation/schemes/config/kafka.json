{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "#CONFIG-KAFKA",
	"type": "object",
	"title": "The kafka client options.",
	"properties": {
		"clientId": {
			"type": "string",
			"minLength": 3
		},
		"groupId": {
			"type": "string",
			"minLength": 3
		},
		"topic": {
			"type": "string",
			"minLength": 3
		},
		"brokers": {
			"type": "array",
			"items": {
				"type": "string",
				"minLength": 3
			},
			"minItems": 1,
			"uniqueItems": true
		}
	},
	"required": ["clientId", "groupId", "topic", "brokers"],
	"additionalProperties": false
}
