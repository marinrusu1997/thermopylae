{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#CONFIG-APP",
  "type": "object",
  "title": "The app config validation schema.",
  "properties": {
    "listen": {
      "type": "object",
      "properties": {
        "host": {
          "$ref": "../core/core.json#/definitions/ip"
        },
        "port": {
          "$ref": "../core/core.json#/definitions/port"
        }
      },
      "required": [
        "host",
        "port"
      ],
      "additionalProperties": false
    },
    "api": {
      "type": "object",
      "properties": {
        "basePath": {
          "type": "string"
        }
      },
      "required": [
        "basePath"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "listen",
    "api"
  ],
  "additionalProperties": false
}
