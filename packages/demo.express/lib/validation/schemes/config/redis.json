{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#CONFIG-REDIS",
  "type": "object",
  "title": "The redis connection options schema.",
  "properties": {
     "host": {
       "$ref": "../core/core.json#/definitions/ip"
     },
     "port": {
       "$ref": "../core/core.json#/definitions/port"
     },
     "path": {
       "type": "string",
       "minLength": 1
     },
     "url": {
       "type": "string",
       "minLength": 1
     },
    "string_numbers": {
      "type": "boolean"
    },
    "return_buffers": {
      "type": "boolean"
    },
    "detect_buffers": {
      "type": "boolean"
    },
    "socket_keepalive": {
      "type": "boolean"
    },
    "socket_initial_delay": {
      "type": "integer",
      "minimum": 0
    },
    "enable_offline_queue": {
      "type": "boolean"
    },
    "retry_unfulfilled_commands": {
      "type": "boolean"
    },
    "password": {
      "$ref": "../core/credentials.json#/properties/password"
    },
    "user": {
      "$ref": "../core/credentials.json#/properties/username"
    },
    "db": {
      "type": "number",
      "minimum": 0,
      "maximum": 15
    },
    "family": {
      "enum": ["IPv4", "IPv6"]
    },
    "connect_timeout": {
      "type": "integer",
      "minimum": 1000
    },
    "max_attempts": {
      "type": "integer",
      "minimum": 1
    },
    "retry_max_delay": {
      "type": "integer",
      "minimum": 1000
    },
    "prefix": {
      "type": "string"
    },
    "attachDebugListeners": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "array",
          "items": {
            "enum": [
              "subscribe",
              "psubscribe",
              "unsubscribe",
              "punsubscribe",
              "connect",
              "reconnecting",
              "end"
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        }
      ]
    }
  },
  "required": [
    "detect_buffers",
    "enable_offline_queue",
    "retry_unfulfilled_commands",
    "password",
    "db",
    "connect_timeout",
    "max_attempts",
    "retry_max_delay",
    "attachDebugListeners"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "path": false,
          "url": false
        }
      },
      "then": {
        "required": [
          "host",
          "port"
        ]
      }
    },
    {
      "if": {
        "allOf": [
          {
            "anyOf": [
              {
                "properties": {
                  "host": false
                }
              },
              {
                "properties": {
                  "port": false
                }
              }
            ]
          },
          {
            "properties": {
              "path": false
            }
          }
        ]
      },
      "then": {
        "required": [
          "url"
        ]
      }
    },
    {
      "if": {
        "allOf": [
          {
            "anyOf": [
              {
                "properties": {
                  "host": false
                }
              },
              {
                "properties": {
                  "port": false
                }
              }
            ]
          },
          {
            "properties": {
              "url": false
            }
          }
        ]
      },
      "then": {
        "required": [
          "path"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "host": true
        },
        "required": ["host"]
      },
      "then": {
        "properties": {
          "port": true,
          "path": false,
          "url": false
        }
      }
    },
    {
      "if": {
        "properties": {
          "port": true
        },
        "required": ["port"]
      },
      "then": {
        "properties": {
          "host": true,
          "path": false,
          "url": false
        }
      }
    },
    {
      "if": {
        "properties": {
          "path": true
        },
        "required": ["path"]
      },
      "then": {
        "properties": {
          "host": false,
          "port": false,
          "url": false
        }
      }
    },
    {
      "if": {
        "properties": {
          "url": true
        },
        "required": ["url"]
      },
      "then": {
        "properties": {
          "host": false,
          "port": false,
          "path": false
        }
      }
    }
  ],
  "additionalProperties": false
}
