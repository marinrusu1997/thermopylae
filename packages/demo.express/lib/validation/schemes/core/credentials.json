{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "The authentication credentials schema.",
  "description": "Credentials are used for user authentication.",
  "properties": {
    "username": {
      "type": "string",
      "pattern": "^(?=.{6,50}$)(?![_.])(?!.*[_.]{2})[a-zA-Z0-9._]+(?<![_.])$"
    },
    "password": {
      "type": "string",
      "minLength": 10,
      "maxLength": 256
    }
  },
  "required": [
    "username",
    "password"
  ]
}
