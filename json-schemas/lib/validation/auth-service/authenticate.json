{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#AUTH_SERVICE-AUTHENTICATE",
  "type": "object",
  "title": "The authenticate method schema.",
  "description": "Schema for validating user input when invoking authenticate method of AuthService.",
  "properties": {
    "username": {
      "$ref": "../core/credentials.json#/properties/username"
    },
    "password": {
      "$ref": "../core/credentials.json#/properties/password"
    },
    "ip": {
      "$ref": "../core/core.json#/definitions/ip"
    },
    "device": {
      "$ref": "../core/core.json#/definitions/device"
    },
    "totp": {
      "type": "string",
      "pattern": "^[0-9]{6}$"
    },
    "recaptcha": {
      "type": "string",
      "maxLength": 50
    },
    "generateChallenge": {
      "type": "boolean"
    },
    "responseForChallenge": {
      "type": "object",
      "properties": {
        "signature": {
          "type": "string",
          "minLength": 10,
          "maxLength": 256
        },
        "signAlgorithm": {
          "type": "string",
          "maxLength": 50
        },
        "signEncoding": {
          "type": "string",
          "maxLength": 50
        }
      },
      "required": [
        "signature",
        "signAlgorithm",
        "signEncoding"
      ]
    }
  },
  "required": [
    "username",
    "ip",
    "device"
  ],
  "if": {
    "properties": {
      "totp": false,
      "generateChallenge": false,
      "responseForChallenge": false
    }
  },
  "then": {
    "required": [
      "password"
    ]
  },
  "additionalProperties": false
}
