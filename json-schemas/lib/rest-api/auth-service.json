{
  "name": "AUTH_SERVICE",
  "path": "/auth",
  "methods": {
    "authenticate": {
      "method": "post",
      "path": "/session/user",
      "unauthorized": "/session/user[/]?$"
    },
    "register": {
      "method": "post",
      "path": "/account",
      "unauthorized": "/account[/]?$"
    },
    "activateAccount": {
      "method": "put",
      "path": "/account/activate",
      "unauthorized": "/account/activate[/]?$"
    },
    "enableMultiFactorAuthentication": {
      "method": "put",
      "path": "/multi_factor"
    },
    "getActiveSessions": {
      "method": "get",
      "path": "/session/user/active"
    },
    "getFailedAuthenticationAttempts": {
      "method": "get",
      "path": "/failed_auth_attempts"
    },
    "changePassword": {
      "method": "put",
      "path": "/account/password/change"
    },
    "createForgotPasswordSession": {
      "method": "post",
      "path": "/session/forgot_password",
      "unauthorized": "/session/forgot_password[/]?$"
    },
    "changeForgottenPassword": {
      "method": "put",
      "path": "/account/password/reset",
      "unauthorized": "/account/password/reset[/]?$"
    },
    "changeAccountLockStatus": {
      "method": "put",
      "path": "/account/lock"
    },
    "logout": {
      "method": "delete",
      "path": "/session/user"
    }
  }
}
