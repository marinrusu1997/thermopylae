{
    "name": "@thermopylae/lib.unit-test",
    "description": "Unit tests environment",
    "keywords": [
        "thermopylae",
        "library",
        "unit testing"
    ],
    "version": "0.0.1592945549",
    "author": "Rusu Marin dimarusu2000@gmail.com",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "lint": "eslint \"lib/**/*.ts\" \"test/**/*.ts\" --fix",
        "build": "gulp build",
        "test": "gulp test",
        "coverage": "gulp coverage",
        "coverage:show": "gulp coverageShow",
        "debug": "gulp debug",
        "clean": "gulp clean",
        "purge": "gulp purge",
        "update": "gulp stickToMajorSemver && npm update --dev --force -verbose",
        "bumpVersion": "timestamp=$(date \"+%s\") && npm version 0.0.$timestamp",
        "precommit": "npm run lint",
        "prepublishOnly": "npm run lint && npm run clean && npm run build && npm run bumpVersion && gulp stickToMajorSemver",
        "unpublish": "npm unpublish --force $npm_package_name"
    },
    "dependencies": {
        "chai-arrays": "2",
        "chai-as-promised": "7",
        "@types/chai-arrays": "1",
        "@types/chai-as-promised": "7"
    },
    "devDependencies": {
        "@thermopylae/module-builder": "latest"
    },
    "peerDependencies": {
        "mocha": "8",
        "chai": "4"
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ]
    },
    "engines": {
        "node": ">= 14"
    },
    "license": "ISC"
}