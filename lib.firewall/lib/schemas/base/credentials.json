{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#credentials",
  "type": "object",
  "title": "The authentication credentials schema.",
  "description": "Credentials are used for user authentication.",
  "properties": {
    "username": {
      "type": "string",
      "title": "The Username Schema",
      "description": "A unique username which identifies the user.",
      "pattern": "^(?=.{6,50}$)(?![_.])(?!.*[_.]{2})[a-zA-Z0-9._]+(?<![_.])$"
    },
    "password": {
      "type": "string",
      "title": "The Password Schema",
      "description": "Password associated with the username.",
      "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{10,256}$"
    }
  },
  "required": [
    "username",
    "password"
  ]
}
